<style>
  :root {
    {% if colorText %}
      --color-text: {{ colorText }};
    {% endif %}
  }

  .longform {
    line-height: 1.5;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .longform a {
    background-image: linear-gradient(to bottom, transparent 90%, #b51f24 0);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    color: #b51f24;
    text-decoration: none;
    transition: background-size .4s ease;
  }

  .longform a:hover {
    background-size: 0% 100%;
    cursor: pointer;
  }

  .longform h1, .longform h2, .longform h3, .longform h4, .longform h5 {
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 0;
  }

  .longform h2, .longform h3, .longform h4, .longform h5 {
    margin-top: 3rem;
  }

  .longform > * + * {
    margin-top: 2rem;
  }

  .longform h1 {
    font-size: clamp(2rem, 2rem + 4vw, 6rem);
  }

  .longform strong {
    font-weight: 700;
  }

  .longform img {
    height: auto;
    max-width: 100%;
  }

  .longform-container {
    margin-left: auto;
    margin-right: auto;
    max-width: 60ch;
    padding-bottom: 2rem;
  }

  .longform :not(pre) > code[class*="language-"],
  .longform pre[class*="language-"] {
    background: {% if backgroundCode %}{{backgroundCode}}{% else %}#21323b{% endif %};
  }

  .longform dd code,
  .longform p code,
  .longform .chatgpt-prompt code {
    background: {% if backgroundCode %}{{backgroundCode}}{% else %}#f5f5f5{% endif %};
    border-radius: 0.25rem;
    color: {% if colorInlineCode %}{{colorInlineCode}}{% else %}currentColor{% endif %};
    display: inline-block;
    padding: 0.125rem 0.25rem;
  }

  .longform figure {   
    margin: 2rem 0 3rem; 
  }

  .longform .full-to-half-bleed .figure {
    padding: 0 1rem;
  }

  .longform figure blockquote {
    background: linear-gradient({% if backgroundPost %}{{backgroundPost}}, {{backgroundPost}}{% else %}#fff, #fff{% endif %}) padding-box, {% if gradientTitle %}{{gradientTitle}}{% else %}#dcdcdc{% endif %} border-box;
    border: solid 2px transparent;
    border-radius: 0.5rem;
    font-size: 1.125em;
    margin: 0;
    padding: 0.75rem 2rem;
    position: relative;
  }

  .longform figure blockquote::before {
    content: "";
    position: absolute;
    width: 5rem;
    border: 0.375rem solid {% if backgroundPost %}{{backgroundPost}}{% else %}#fff{% endif %};
    bottom: -0.1875rem;
    left: 4rem;
    z-index: 2;
  }

  .longform figure blockquote::after {
    background: linear-gradient({% if backgroundPost %}{{backgroundPost}}, {{backgroundPost}}{% else %}#fff, #fff{% endif %}) padding-box, {% if gradientTitle %}{{gradientTitle}}{% else %}#dcdcdc{% endif %} border-box;
    border: 2px solid transparent;
    border-bottom: none;
    border-left: none;
    border-radius: 0 3.125rem 0 0;
    bottom: -3.875rem;
    content: "";
    height: 3.75rem;
    left: 3.125rem;
    position: absolute;
    width: 3.75rem;
    z-index: 3;
  }

  .longform figure figcaption {
    margin: 1rem 0 0 10rem;
  }

  {% if gradientTitle %}
  .longform h1, .longform h2, .longform h3, .longform h4, .longform h5 {
    background: {{ gradientTitle }};
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-box-decoration-break: clone;
  }
  {% endif %}

  {% if colorLink %}
  .longform a {
    background-image: linear-gradient(to bottom, transparent 90%, {{ colorLink }} 0);
    color: {{ colorLink }};
  }
  {% endif %}

  .full-bleed,
  .full-to-half-bleed,
  .longform header {
    margin-left: 50%;
    overflow: hidden;
    max-width: 100rem;
    transform: translateX(-50%);
    width: 100vw;
  }  

  .post-header h1 {
    margin: 0;
    padding: 1rem;
  }

  .post-header.no-img,
  .longform.no-img {
    justify-content: center;
    padding: 2rem 1rem 0;
  }

  .post-header img {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .longform .chatgpt-prompt code[class*="language-"], 
  .longform .chatgpt-prompt pre[class*="language-"] {
    white-space: normal;
  }

  @media screen and (min-width: 1000px) {
    .full-to-half-bleed,
    .longform img.full-to-half-bleed,
    .normal-to-half-bleed {
      max-width: 150%;
      width: 150%;
      margin-left: -25%;
      margin-right: -25%;
      transform: none;
    }

    .post-header {
      align-items: center;
      display: flex;
      justify-content: space-between;
      margin-bottom: 3rem;
    }

    .post-header img {
      margin-left: 0;
      margin-right: 0;
      max-width: 672px;
      width: 50%;
    }
    
    .post-header h1 {
      padding: 0 1rem;
    }

    @media screen and (min-width: 1400px) {
      .longform {
        font-size: 1.25rem;
      }
    }

    @media screen and (min-width: 1600px) {
      .longform {
        font-size: 1.375rem;
      }
    }
  }
</style>