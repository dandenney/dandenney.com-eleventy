<section class="mx-auto sm:max-w-3xl">

  <h1 class="font-black pb-4 text-6xl md:text-9xl">Posts</h1>

  <nav class="flex flex-col items-start pb-12">
    {% for post in collections.posts | reverse %}
      <a class="link my-3 text-xl md:text-2xl" href="{{ post.url | url }}">{{ post.data.title }}</a>
    {% endfor %} 
  </nav> 

</section>
