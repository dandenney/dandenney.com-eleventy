---
layout: layouts/base.njk
---

<style>
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 1fr);
    grid-column-gap: 32px;
    grid-row-gap: 0px;
    padding: 1rem;
  }

  .posts-grid article { grid-area: 1 / 1 / 3 / 2; }
  .posts-grid a:nth-of-type(2) { grid-area: 1 / 2 / 2 / 3; }
  .posts-grid a:nth-of-type(3) { grid-area: 1 / 3 / 2 / 4; }
  .posts-grid a:nth-of-type(4) { grid-area: 2 / 2 / 3 / 3; }
  .posts-grid a:nth-of-type(5) { grid-area: 2 / 3 / 3 / 4; }
  .posts-grid a:nth-of-type(6) { grid-area: 3 / 1 / 4 / 2; }
  .posts-grid a:nth-of-type(7) { grid-area: 3 / 2 / 4 / 3; }
  .posts-grid a:nth-of-type(8) { grid-area: 3 / 3 / 4 / 4; }
  .posts-grid a:nth-of-type(9) { grid-area: 4 / 1 / 5 / 2; }
  .posts-grid a:nth-of-type(10) { grid-area: 4 / 2 / 5 / 3; }
  .posts-grid a:nth-of-type(11) { grid-area: 4 / 3 / 5 / 4; }

  .posts-grid a:nth-of-type(odd) {
    padding-top: 3rem;
  }

  .link-post {
    text-decoration: none;
  }

  .link-title {
    color: #000000;
    display: block;
    font-size: 1.5rem;
    font-weight: 900;
    padding: 0.5rem 2rem 0 2rem;
  }

  .link-description {
    color: #000000;
    display: block;
    padding: 0.5rem 2rem 2rem 2rem;
  }

  .link-post img {
    max-width: 100%;
  }
</style>

<section class="posts-grid">

  <article>

    {% include "header.njk" %}

    <h1 class="mt-4 mx-auto text-lg sm:max-w-2xl">I'm Dan Denney, a front-end dev at <a class="link" href="https://www.datacamp.com">DataCamp</a> and all-around fan design and dev.</h1>

    {% include "social.njk" %}

  </article>
  
  {% set homePosts = collections.posts | reverse %}
  {% for homePost in homePosts.slice(0, 13) %}
    <a class="link-post" href="{{ homePost.url | url }}">
      <img src="https://picsum.photos/600/400" alt="" />
      <span class="link-title">{{ homePost.data.title }}</span>
      <span class="link-description">This is a short description of a post, no ellipsis allowed.</span>
    </a>
  {% endfor %} 

</section>


