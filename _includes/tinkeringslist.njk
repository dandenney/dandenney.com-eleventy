<ol reversed class="postlist" style="counter-reset: start-from {{ (tinkeringslistCounter or tinkeringslist.length) + 1 }}">
{% for tinkering in tinkeringslist | reverse %}
  <li class="postlist-item{% if tinkering.url == url %} postlist-item-active{% endif %}">
    <a href="{{ tinkering.url | url }}" class="postlist-link">{% if tinkering.data.title %}{{ tinkering.data.title }}{% else %}<code>{{ tinkering.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ tinkering.date | htmlDateString }}">{{ tinkering.date | readableDate }}</time>
    {% for tag in tinkering.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
