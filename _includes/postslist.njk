<ol reversed class="postlist posts" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}"><span class="postlist-month">{{ post.date | postMonth }}</span><span class="postlist-day">{{ post.date | postDay }}</span><span class="postlist-year">{{ post.date | postYear }}</span></time>
    <div class="postlist-meta">
      <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      {% if post.data.summary %}<p>{{post.data.summary}}</p>{% endif %}
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="postlist-tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
  </li>
{% endfor %}
</ol>
