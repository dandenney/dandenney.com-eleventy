---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set css %}
  {% include "prism.css" %}
{% endset %}
<style>
  {{ css | cssmin | safe }}
</style>

<article>
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </header>
  <div class="post-body">
    {{ content | safe }}
  </div>
</article>

<p class="u-ta-c u-pb-1"><a href="{{ '/' | url }}">← Home</a></p>
