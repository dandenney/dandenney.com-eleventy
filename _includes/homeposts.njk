<ol reversed class="home-postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="home-postlist-item{% if post.url == url %} home-postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    {% if post.data.summary %}<p>{{post.data.summary}}</p>{% endif %}
    <div class="postlist-meta">
      <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="postlist-tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </a>
  </li>
{% endfor %}
</ol>
